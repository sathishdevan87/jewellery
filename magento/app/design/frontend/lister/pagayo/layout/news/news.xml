<layout version="0.1.0">
    <default>
        <reference name="footer_links">
            <action method="addLink" translate="label title" module="news" >
                <label>News</label>
                <url>news/index</url>
                <title>News</title>
                <prepare>true</prepare>
            </action>
        </reference> 
        <reference name="head">
        <action method="addItem">
                <type>skin_js</type>
                <name>js/slider/carousel.js</name>
        </action>
       <action method="addItem">
                <type>skin_css</type>
                <name>css/slider/carousel.css</name>
        </action>
        </reference>
       </default>
       <cms_index_index>
           <reference name="content">
            <block type="news/news" name="slider_block" template="news/my_slider.phtml" />
        </reference>  
       </cms_index_index>
    
    <news_index_index>
        <reference name="content">
            <block type="news/news" name="all_news_block" template="news/news_links.phtml" />
        </reference>
    </news_index_index>
    <news_index_view>
        <reference name="content">
            <block type="news/news" name="news_block" template="news/view_news.phtml" />
        </reference>
    </news_index_view>
    <catalog_category_default>
        <reference name="root">
            <action method="setTemplate"><template>page/3columns.phtml</template></action>
        </reference>
    </catalog_category_default>
    <catalog_product_view translate="label"> 
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>
    </catalog_product_view>
    
</layout>
